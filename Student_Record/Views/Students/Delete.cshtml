@model Student_Record.Models.Students

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2>Delete Student</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this?</h3>
                    <dl class="row mt-4">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.StudentName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.StudentName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FatherName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FatherName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FatherContact)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FatherContact)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MotherName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MotherName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MotherContact)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MotherContact)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfBirth)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Gender)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProgrammeEnrolled)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProgrammeEnrolled)</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
